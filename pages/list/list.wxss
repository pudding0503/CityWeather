page{
  background-color: #F0F0F0;
}
.location {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.location-icon {
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}
.location-text {
  opacity: 0.5;
  font-size: 30rpx;
}
.date-item {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.day {
  opacity: 0.8;
  font-size: 34rpx;
  line-height: 56rpx;
}
.date {
  opacity: 0.5;
  font-size: 25rpx;
  line-height: 35rpx;
}
.temp{
  flex-grow: 1;
  padding-right: 150rpx;
  text-align: right;
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
}
.weather-icon {
  width: 90rpx;
  height: 90rpx;
}
.info-png {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  margin-top: -44rpx;
  margin-left: 655rpx;
}
.rotateAn {
  animation: rotate 3s linear infinite;
}
@keyframes rotate {
  0% {transform: rotate(0deg)}
  50% {transform: rotate(0deg)}
  60% {transform: rotate(0deg)}
  70% {transform: rotate(90deg)}
  80% {transform: rotate(180deg)}
  90% {transform: rotate(270deg)}
  100% {transform: rotate(360deg)}
}
.end-tips {
  margin-top: 10rpx;
  text-align: center;
  opacity: 0.5;
  height: 42rpx;
}